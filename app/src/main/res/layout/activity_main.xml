<!--            android:layout_marginTop="30dp"-->

<!--            />-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:height="22dp"
            android:layout_marginTop="20dp"
            android:id="@+id/txt"
            />
        </LinearLayout>
</ScrollView>

